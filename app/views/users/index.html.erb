<div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
<%= render 'books/list', {book: @book, user: @user} %>
      </div>
      <div class='col-md-8 offset-md-1'>
        <h2>Users</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <th><%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "100x100", fallback: "default-image.jpg" %></th>
                <th><%= user.name %></th>
                <th><%= link_to "Show", user_path(user.id) %></th>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

  </div>
</div>
