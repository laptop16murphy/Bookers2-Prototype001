<main>
  <p id="notice"><%= flash[:notice] %></p>

        <h2>User info</h2>
        <table class='table'>
          <tr>
            <%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "100x100", fallback: "default-image.jpg" %>
          </tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </table>
        <div class='row'>
          <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
        </div>

        <h2 class="mt-3">New book</h2>
          <%= form_with model: book, local:true do |f| %>
          <div class="form-group">
           <h5>Title</h5>
           <%= f.text_field :title %>
          </div>
           <div class="form-group">
            <h5>Opinion</h5>
            <%= f.text_area :body %>
           </div>
            <div class="form-group">
             <%= f.submit 'Create Book', class:"btn btn-success" %>
            </div>
          <% end %>

</main>